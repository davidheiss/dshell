{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "sass",
            "command": "sass --no-error-css --no-source-map --watch style/app.scss style.css",
            "type": "shell",
            "problemMatcher": [
                "$node-sass"
            ],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "never"
            },
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}